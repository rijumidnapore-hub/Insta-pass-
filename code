    <p>
      Will you give me your Instagram ID code from your WhatsApp? üò≠üì±<br>
      (Pleaseeee ü•∫üëâüëà)
    </p>

    <div class="btnArea" id="btnArea">
      <button id="yesBtn">YES üòç</button>
      <button id="noBtn">NO üò§</button>
    </div>

    <div id="result">
      Yayyy Sreya Dhar!!! üíñü•∫<br>
      Send it to Debjit now üòåüì©
    </div>

    <div class="footer">Try clicking NO üòà</div>
  </div>

  <script>
    const yesBtn = document.getElementById('yesBtn');
    const noBtn  = document.getElementById('noBtn');
    const btnArea = document.getElementById('btnArea');
    const result = document.getElementById('result');

    let lastMove = 0;
    const THROTTLE_MS = 120;
    const PROXIMITY = 110;

    function moveNoRandom(){
      const areaRect = btnArea.getBoundingClientRect();
      const btnRect = noBtn.getBoundingClientRect();

      const maxX = Math.max(0, areaRect.width - btnRect.width);
      const maxY = Math.max(0, areaRect.height - btnRect.height);

      const x = Math.floor(Math.random() * (maxX + 1));
      const y = Math.floor(Math.random() * (maxY + 1));

      noBtn.style.left = x + "px";
      noBtn.style.top  = y + "px";
    }

    function escapeNo(){
      const now = Date.now();
      if(now - lastMove < THROTTLE_MS) return;
      lastMove = now;
      moveNoRandom();
    }

    // Mouse proximity
    btnArea.addEventListener("mousemove", (e) => {
      const areaRect = btnArea.getBoundingClientRect();
      const noRect = noBtn.getBoundingClientRect();

      const mx = e.clientX - areaRect.left;
      const my = e.clientY - areaRect.top;

      const cx = (noRect.left - areaRect.left) + noRect.width/2;
      const cy = (noRect.top  - areaRect.top)  + noRect.height/2;

      const dist = Math.hypot(mx - cx, my - cy);
      if(dist < PROXIMITY) escapeNo();
    });

    // Touch proximity
    btnArea.addEventListener("touchmove", (e) => {
      if(!e.touches || e.touches.length === 0) return;

      const areaRect = btnArea.getBoundingClientRect();
      const noRect = noBtn.getBoundingClientRect();

      const t = e.touches[0];
      const mx = t.clientX - areaRect.left;
      const my = t.clientY - areaRect.top;

      const cx = (noRect.left - areaRect.left) + noRect.width/2;
      const cy = (noRect.top  - areaRect.top)  + noRect.height/2;

      const dist = Math.hypot(mx - cx, my - cy);
      if(dist < PROXIMITY){
        e.preventDefault();
        escapeNo();
      }
    }, {passive:false});

    // If she taps NO directly
    noBtn.addEventListener("click", (e) => {
      e.preventDefault();
      escapeNo();
    });

    noBtn.addEventListener("touchstart", (e) => {
      e.preventDefault();
      escapeNo();
    }, {passive:false});

    // YES click
    yesBtn.addEventListener("click", () => {
      btnArea.style.display = "none";
      result.style.display = "block";
    });

    // Init
    setTimeout(moveNoRandom, 80);
    window.addEventListener("resize", () => setTimeout(moveNoRandom, 120));
  </script>

</body>
